{% extends 'base.html.twig' %}

{% block title %}Voitures d'occasion {{title}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Details de {{car.name}}</h1>
    <p>ceci est la page de details de la galerie</p>
    <div class="card mb-3">
      <img src="" class="card-img-top" alt="...">
      <div class="card-body">
<p class="card-text text-body-primary">Prix : {{car.price}}</p>
<p class="card-text text-body-primary">{{car.brand.name}}</p>
<p class="card-text text-body-primary">{{car.km}} km</p>
<p class="card-text text-body-primary">{{car.fuel.name}} </p>
<p class="card-text text-body-primary">Transmission : {{car.transmission.name}}</p>
  <p>Description: {{ car.description | raw }}</p>
<button>Contact us</button>
      </div>
    </div>
    
</div>
{% endblock %}