{% extends 'base.html.twig' %}

{% block title %}Voitures d'occasion {{title}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class" container">
    <a href="{{ path('app_gallery_index') }}" class=" btn btn-primary mx-auto">Retour</a>
        <div class=" my-5">
            <h1 class="text-center">Details de {{car.name}}</h1>
        </div>
        <div class="card mx-5 px-3">
            <img src="" class="card-img-top" alt="...">
            <div class="card-body">
            <p class="card-text text-body-primary">Prix : {{car.price}}</p>
            <p class="card-text text-body-primary">Ann√©e : {{car.carYear}}</p>
            <p class="card-text text-body-primary">{{car.brand.name}}</p>
            <p class="card-text text-body-primary">{{car.km}} km</p>
            <p class="card-text text-body-primary">{{car.fuel.name}} </p>
            <p class="card-text text-body-primary">Transmission : {{car.transmission.name}}</p>
            <p>Description: {{ car.description | raw }}</p>
            <a  href="{{ path('app_gallery_contact', {'id': car.id}) }}" class="btn btn-primary mx-auto">Contactez-nous</a>
        </div>
    </div>
</div>
    
{% endblock %}